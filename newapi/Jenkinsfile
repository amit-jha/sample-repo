#! /usr/bin/groovy
pipeline{
    agent any
    stages{
        stage("Test"){
            steps{
                unitTesting()
            }
        }
        stage("Coverage"){
            steps{
                 echo("Deploying")
            }
        }

        stage("Deploy"){
            steps(){
                echo("Deploying")
            }
        }
    }
}

def unitTesting(){
    readFile 'project/newapi/pom.xml'
    sh "mvn clean test"
}

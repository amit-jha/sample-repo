#! /usr/bin/groovy
pipeline{
    agent any
    stages{
        stage("Test"){
            steps{
                echo("Testing")
                sh 'mvn clean test'
                unitTesting()
            }
        }
        stage("Coverage"){
            steps{
                 echo("Deploying")
            }
        }

        stage("Deploy"){
            steps(){
                echo("Deploying")
            }
        }
    }
}

def unitTesting(){
    sh "mvn clean test"
}
